<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="newFile" styleClass="btn" text="Novo Arquivo">
                    <graphic>
                       <!--<FontIcon iconLiteral="bi-file-earmark-plus"/>-->
                    </graphic>
                </Button>
                <Button fx:id="openFile" styleClass="btn" text="Abrir Arquivo">
                    <graphic>
                        <!--<FontIcon iconLiteral="bi-folder2-open"/>-->
                    </graphic>
                </Button>
                <Button fx:id="saveFile" styleClass="btn" text="Salvar Arquivo">
                    <graphic>
                        <!--<FontIcon iconLiteral="bi-save"/>-->
                    </graphic>
                </Button>
                <Button fx:id="runAnalysis" styleClass="btn" stylesheets="@tela.css" text="Executar Análise">
                    <graphic>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <VBox>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <TextArea fx:id="textInput" prefHeight="200" promptText="Digite o código aqui..." styleClass="text-input" stylesheets="@tela.css" />
                <TableView fx:id="tokenTable" styleClass="token-table">
                    <columns>
                        <TableColumn text="Linha" />
                        <TableColumn text="Token" />
                        <TableColumn text="Lexema" />
                    </columns>
                </TableView>
            </children>
        </VBox>
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <ProgressIndicator fx:id="loader" visible="false" />
                <Label text="Tempo de execução:" />
                <Label fx:id="executionTime" text="0 ms" />
            </children>
        </HBox>
    </children>
</VBox>
