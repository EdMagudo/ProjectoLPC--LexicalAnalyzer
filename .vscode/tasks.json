{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "bin",
        "src/**/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"]
    },
    {
      "label": "createJar",
      "type": "shell",
      "command": "jar",
      "args": [
        "cvf",
        "app.jar",
        "-C",
        "bin",
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": "build"
    }
  ]
}
